@using Finder.Database.Repositories.Web
@using System.Security.Claims
@inject UserSettingsRepository UserSettingsRepository
@{
    ViewData["Title"] = "Settings";
    if (User.Identity.IsAuthenticated) {
        ViewData["DarkMode"] = await UserSettingsRepository.GetUserSettingAsync(ulong.Parse(User.Claims.First(x => x.Type == ClaimTypes.NameIdentifier).Value), "DarkMode") ?? "false";
    } else {
        ViewData["DarkMode"] = "false";
    }
    var darkMode = await UserSettingsRepository.GetUserSettingAsync(ulong.Parse(User.Claims.First(x => x.Type == ClaimTypes.NameIdentifier).Value), "DarkMode");
    var devMode = await UserSettingsRepository.GetUserSettingAsync(ulong.Parse(User.Claims.First(x => x.Type == ClaimTypes.NameIdentifier).Value), "DevMode");

}
<form action="/user/settings" method="post">
    <div class="form-check form-switch">
        <input class="form-check-input" type="checkbox" id="DarkMode" name="DarkMode" value="true" @(darkMode == "true" ? "checked=\"checked\"" : "")/>
        <label class="form-check-label" for="DarkMode">Dark Mode</label>
    </div>
    @if (User.HasClaim("IsBotOwner", "true")) {
        <div class="form-check form-switch">
            <input class="form-check-input" type="checkbox" id="DevMode" name="DevMode" value="true" @(devMode == "true" ? "checked=\"checked\"" : "")/>
            <label class="form-check-label" for="DevMode">Dev Mode</label>
        </div>
    }
    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>
    

